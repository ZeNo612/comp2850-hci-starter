<li id="task-{{ task.id }}">
    <form hx-patch="/tasks/{{ task.id }}" hx-target="closest li" hx-swap="outerHTML">
        <input type="text" name="title" value="{{ task.title }}" required aria-label="Edit task title">
        <button type="submit">Save</button>
        <button type="button" hx-get="/tasks/{{ task.id }}/view" hx-target="closest li" hx-swap="outerHTML">Cancel</button>
    </form>
</li>